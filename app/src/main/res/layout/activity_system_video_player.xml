<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#000000">

    <com.example.louiemain.mobileplayer.view.VideoViewSelf
            android:id="@+id/vv_video_player"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <include
            layout="@layout/media_controller_self"
            android:id="@+id/media_controller"
            android:visibility="gone"/>

    <include
            layout="@layout/buffer_loading"
            android:id="@+id/ll_buffer_loading"
            android:visibility="gone"/>
    <include layout="@layout/resource_loading"
             android:id="@+id/ll_resource_loading"
             android:visibility="visible"/>

</RelativeLayout>